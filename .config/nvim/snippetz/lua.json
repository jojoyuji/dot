{
  "#!": {
    "prefix": "#!",
    "body": "#!/usr/bin/env lua\n$0",
    "description": "Shebang header"
  },
  "!fun(ction)?!": {
    "prefix": "!fun(ction)?!",
    "body": "function ${1:new_function}(${2:args})\n   $0\nend",
    "description": "New function"
  },
  "forp": {
    "prefix": "forp",
    "body": "for ${1:name},${2:val} in pairs(${3:table_name}) do\n   $0\nend",
    "description": "pair for loop"
  },
  "fori": {
    "prefix": "fori",
    "body": "for ${1:idx},${2:val} in ipairs(${3:table_name}) do\n   $0\nend",
    "description": "ipair for foop"
  },
  "for": {
    "prefix": "for",
    "body": "for ${1:i}=${2:first},${3:last}${4/^..*/(?0:,:)/}${4:step} do\n   $0\nend",
    "description": "numeric for loop"
  },
  "local": {
    "prefix": "local",
    "body": "local ${1:x} = ${0:1}",
    "description": "local x = 1"
  },
  "map": {
    "prefix": "map",
    "body": "local bind = vim.api.nvim_set_keymap\nbind('n', '', '', {})",
    "description": "nvim mapping"
  }
}