{
  "header": {
    "prefix": "header",
    "body": "\" File: ${1:`!v expand('%:t')`}\n\" Author: ${2:`!v g:snips_author`}\n\" Description: ${3}\n${4:\" Last Modified: `!v strftime(\"%B %d, %Y\")`}\n\n$0"
  },
  "gvar": {
    "prefix": "gvar",
    "body": "if !exists(\"g:${1:MyUltraImportantVar}\")\n\tlet g:$1 = ${2:\"${3:<tab>}\"}\nendif",
    "description": "Global / configuration variable"
  },
  "guard": {
    "prefix": "guard",
    "body": "if exists('${1:did_`!p snip.rv = snip.fn.replace('.','_')`}') || &cp${2: || version < 700}\n\tfinish\nendif\nlet $1 = 1${3}"
  },
  "f": {
    "prefix": "f",
    "body": "fun ${1:function_name}(${2})\n\t${3:\" code}\nendf"
  },
  "for": {
    "prefix": "for",
    "body": "for ${1:needle} in ${2:haystack}\n\t${3:\" code}\nendfor"
  },
  "wh": {
    "prefix": "wh",
    "body": "while ${1:condition}\n\t${2:\" code}\nendw"
  },
  "if": {
    "prefix": "if",
    "body": "if ${1:condition}\n\t${2:\" code}\nendif"
  },
  "ife": {
    "prefix": "ife",
    "body": "if ${1:condition}\n\t${2}\nelse\n\t${3}\nendif"
  },
  "plug": {
    "prefix": "plug",
    "body": "Plug '${VISUAL}' $0",
    "description": "Description"
  }
}